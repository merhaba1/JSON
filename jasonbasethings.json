{
    "$jason":{
        "head":{
            "title":"Sections",
            "styles":{
                "bold":{
                    "font":"HelveticaNeue-CondensedBold",
                    "padding":"10",
                    "size":"15"
                },
                "normal":{
                    "font":"HelveticaNeue-Bold",
                    "color":"rgb(154,205,50)",
                    "size":"12"
                },
                "carousel_img":{
                    "height":"210",
                    "width":"210"
                },
                "avatar_img":{
                    "height":"70",
                    "width":"70",
                    "corner_radius":"35"
                },
                "username":{
                    "font":"Avenir",
                    "size":"15"
                },
                "center":{
                    "align":"center"
                }
            },
            "actions":{
                "$foreground":{
                    "type":"$reload"
                }
            }
        },
        "body":{
            "style":{
                "background":"#ECA73E"
            },
            "header":{
                "style":{
                    "background": "#ECA73E"
                },
                "menu":{
                    "text":"View JSON",
                    "href":{
                        "url":"http://www.jsonbase.com/things/jYJ/edit",
                        "view":"web"
                    }
                }
            },
            "Sections":[
                {
                    "type":"horizontal",
                    "header":{
                        "type":"horizontal",
                        "style":{
                            "align":"center",
                            "background":"#ECA73E",
                            "opacity":"0.2",
                            "spacing":"10"
                        },
                        "components":[
                            {
                                "type":"image",
                                "url":"https://s3-us-west-2.amazonaws.com/fm.ethan.jason/swipehorizontal.png",
                                "style":{
                                    "width":"50"
                                }
                            },
                            {
                                "type":"label",
                                "class":"bold",
                                "text":"horizaontally scrolling section"
                            }
                        ]
                    }
                }
            ]
        }
    }

}